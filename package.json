{
    "name": "ts-template",
    "version": "1.0.0",
    "main": "src/Program.ts",
    "author": "Merijn Hendriks",
    "license": "NCSA",
    "repository": "https://github.com/MerijnHendriks/ts-template",
    "description": "Typescript project template",
    "scripts": {
        "build": "npx tsc --outFile bin/Program.js",
        "doc": "npx typedoc src/Program.ts",
        "lint": "npx eslint --ext .ts --fix src/**/*.ts",
        "test": "node bin/Program.js"
    },
    "devDependencies": {
        "typescript": "^4.1.0",
        "eslint": "^7.16.0",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "typedoc": "^0.20.0"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "env": {
            "browser": true,
            "es2021": true
        },
        "parserOptions": {
            "sourceType": "module"
        }
    }
}
