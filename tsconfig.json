{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "bin",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "**/node_modules/*"
    ]
}
